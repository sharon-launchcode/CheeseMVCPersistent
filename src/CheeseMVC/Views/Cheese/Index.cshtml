@model List<CheeseMVC.Models.Cheese>

@{ ViewBag.Title = "Cheeses";}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Category</td>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheese categories yet!</p>
}

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese Category</a></p>
<p><a asp-controller="Cheese" asp-action="Remove">Remove Cheese Category</a></p>
