@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Type</td>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.Type</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
